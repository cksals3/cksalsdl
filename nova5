#include <stdio.h>

struct Student {
    char name[20];
    int age;
    double grade;
};

int main() {
    struct Student s1;

    printf("이름을 입력하세요: ");
    scanf("%s", s1.name);

    printf("나이를 입력하세요: ");
    scanf("%d", &s1.age);

    printf("평균 점수를 입력하세요: ");
    scanf("%lf", &s1.grade);

    printf("\n--- 학생 정보 ---\n");
    printf("이름: %s\n", s1.name);
    printf("나이: %d\n", s1.age);
    printf("평균 점수: %.2f\n", s1.grade);

    return 0;
}
